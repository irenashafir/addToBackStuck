<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainContainer"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="shafir.irena.vetstreet.MainFragment"
    android:background="#4597be">


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnHealth"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTintMode="multiply"
        android:breakStrategy="balanced"
        android:elevation="24dp"
        android:onClick="news"
        android:text="Pet Health"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
        android:textStyle="bold"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvPuppy" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnExercise"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="@dimen/bootstrap_h4_text_size"
        android:text="Pets and Exercise"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
        android:textStyle="bold"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvKitten" />


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnAlternative"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="@dimen/bootstrap_h4_text_size"
        android:text="Alternative Medicine"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"
        android:textStyle="bold"
        app:bootstrapBrand="danger"
        app:bootstrapSize="lg"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExercise" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnInfo"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:elevation="@dimen/bootstrap_h4_text_size"
        android:text="Nutrition Information"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHealth" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="120dp"
        android:layout_height="121dp"
        android:src="@mipmap/puppy"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"
        android:id="@+id/cvPuppy"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cvKitten"
        android:layout_width="120dp"
        android:layout_height="121dp"
        android:foregroundGravity="center"
        android:src="@mipmap/kitten"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>